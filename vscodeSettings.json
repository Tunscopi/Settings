{
    "editor.fontSize": 11.5,

    "zenMode.hideActivityBar": false,
    "editor.minimap.enabled": false,

    // Enable Breadcrumbs
    "breadcrumbs.enabled": true,

    // Use <TAB> for completion instead of <ENTER>
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tabCompletion": "on",

    // Show Whitespace characters
    "editor.renderWhitespace": "all",
    
    // Save editor space
    "editor.glyphMargin": true,
    "editor.folding": false,
    //"editor.lineNumbers": "off",

    "editor.maxTokenizationLineLength": 2000,
    
    "workbench.iconTheme": null,
    "workbench.colorCustomizations": {
       "editorCursor.foreground": "#ff0000",
       "editor.selectionBackground": "#135564",
       "editor.selectionHighlightBackground": "#135564",
       "terminal.foreground": "#448f2d",
       "terminalCursor.foreground": "#ff0000",
       "terminal.ansiWhite": "#ffffff"
    },
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    //"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    "terminal.integrated.enableBell": false,
    "terminal.integrated.shell.windows": "powershell.exe",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.confirmOnExit": true,

    "explorer.openEditors.visible": 10,
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    
    "explorer.openEditors.visible": 10,
    //"workbench.activityBar.visible": true,
    "nmake.hide-large-folder-notification": true,
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.configurationWarnings": "Disabled",
    "C_Cpp.default.enableConfigurationSquiggles": false,
    "C_Cpp.intelliSenseEngineFallback": "Enabled",
    "extensions.autoUpdate": false,
        // Xperf
    "[xperf]": {
        
    },
    "files.associations": {
        "*.txt": "xperf",
        "sources": "xperf",
        "*.ps1": "xperf",
        "*.json": "xperf",
        "*.definition": "xperf"
    },
    "git.suggestSmartCommit": false,
    "workbench.activityBar.visible": false,
    "files.exclude": {
        ".err": true,
        ".log": true
    }
}
